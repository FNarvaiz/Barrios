@model Serenity.Services.ListResponse<Barrios.Perfil.Entities.VecinosMascotasRow>
@*<link href="~/Content/css/PPAReport.css" rel="stylesheet" />*@
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title> @CurrentNeigborhood.Get().LargeDisplayName | Mascotas</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <link rel="stylesheet" href="~/Content/bootstrap.css">
    <link rel="stylesheet" href="~/Content/site/site.css">
</head>
<body onload="window.print();">
    <div class="wrapper">
        <!-- Main content -->
        <section class="invoice">
            <!-- title row -->
            <div class="row">
                <div class="col-xs-12">
                    <h2 class="page-header">
                        <i class="fa fa-globe"></i> Mascotas
                        <small class="pull-right">@CurrentNeigborhood.Get().LargeDisplayName <br /> @DateTime.Today.ToShortDateString() - @DateTime.Now.ToShortTimeString()</small>
                    </h2>
                </div>
                <!-- /.col -->
            </div>
            <!-- info row -->
            <!-- /.row -->
            <!-- Table row -->
            <div class="row">
                <div class="col-xs-12 table-responsive">
                    @foreach (var row in Model.Entities){
                    
                        <article class="col-xs-6 mascota">
                            <h3>@row.UseridUnit - @row.UseridUsername</h3>
                            <h4>@row.Nombre</h4>
                            <img style=" height:100px;" src="/upload/@row.Foto" />
                        </article>
                    }
                </div>
                        <!-- /.col -->
            </div>
            <!-- /.row -->
            <!-- /.row -->
        </section>
        <!-- /.content -->
    </div>
    <!-- ./wrapper -->
</body>
</html>